{% extends 'base.html.twig' %}

{% block title %}Tableau de bord - IsoMessage{% endblock %}

{% block body %}
    <div class="dashboard-content">
        <h1>Bienvenue sur IsoMessage !</h1>

        <div class="welcome-card">
            <h2>Gérez vos contacts et envoyez vos SMS facilement.</h2>
            <p>Votre solde de SMS disponible : <strong>{{ sms_balance ?? 0 }} SMS</strong></p>

            <div class="dashboard-actions">
                <a href="{{ path('app_contact_index') }}" class="btn btn-primary">Voir mes contacts</a>
                <a href="{{ path('app_contact_group_index') }}" class="btn btn-secondary">Gérer mes groupes</a>
            </div>
        </div>

        <div class="stats-container">
            <div class="stat-card">
                <h3>Statistiques rapides</h3>
                <div class="stats-grid">
                    <div class="stat-item">
                        <span class="stat-label">Total contacts :</span>
                        <span class="stat-value">{{ stats.total_contacts ?? 0 }}</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-label">Total groupes :</span>
                        <span class="stat-value">{{ stats.total_groups ?? 0 }}</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-label">SMS envoyés (aujourd'hui) :</span>
                        <span class="stat-value">{{ stats.sms_sent_today ?? 0 }}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
