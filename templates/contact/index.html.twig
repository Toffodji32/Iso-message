{% extends 'base.html.twig' %}

{% block title %}Mes Contacts{% endblock %}

{% block header_title %}Carnet d'adresses > Mes contacts{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .contacts-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #e9ecef;
        }

        .page-title {
            font-size: 1.8rem;
            font-weight: 600;
            color: #333;
            margin: 0;
        }

        .btn {
            padding: 0.75rem 1.5rem;
            border-radius: 6px;
            font-weight: 500;
            text-decoration: none;
            border: 1px solid transparent;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.15s ease-in-out;
            font-size: 0.875rem;
        }

        .btn-primary {
            background-color: #3b82f6;
            color: white;
            border-color: #3b82f6;
        }

        .btn-primary:hover {
            background-color: #2563eb;
            border-color: #2563eb;
            color: white;
        }

        .btn-outline-secondary {
            background-color: transparent;
            color: #6b7280;
            border-color: #d1d5db;
        }

        .btn-outline-secondary:hover {
            background-color: #f9fafb;
            color: #374151;
            border-color: #9ca3af;
        }

        .btn-sm {
            padding: 0.375rem 0.75rem;
            font-size: 0.75rem;
        }

        .btn-info {
            background-color: #06b6d4;
            color: white;
            border-color: #06b6d4;
        }

        .btn-info:hover {
            background-color: #0891b2;
            color: white;
        }

        .btn-warning {
            background-color: #f59e0b;
            color: white;
            border-color: #f59e0b;
        }

        .btn-warning:hover {
            background-color: #d97706;
            color: white;
        }

        .btn-danger {
            background-color: #ef4444;
            color: white;
            border-color: #ef4444;
        }

        .btn-danger:hover {
            background-color: #dc2626;
            color: white;
        }

        .filter-section {
            background: #f9fafb;
            border: 1px solid #e5e7eb;
            border-radius: 8px;
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        .filter-form {
            display: grid;
            grid-template-columns: 1fr 1fr auto;
            gap: 1.5rem;
            align-items: end;
        }

        @media (max-width: 768px) {
            .filter-form {
                grid-template-columns: 1fr;
            }
        }

        .form-group {
            display: flex;
            flex-direction: column;
        }

        .form-label {
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: #374151;
            font-size: 0.875rem;
        }

        .form-control, .form-select {
            padding: 0.75rem 1rem;
            border: 1px solid #d1d5db;
            border-radius: 6px;
            font-size: 0.875rem;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
            background-color: white;
        }

        .form-control:focus, .form-select:focus {
            border-color: #3b82f6;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(59, 130, 246, 0.25);
        }

        .form-control::placeholder {
            color: #9ca3af;
        }

        .filter-actions {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .contacts-table-container {
            background: white;
            border: 1px solid #e5e7eb;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
        }

        .contacts-table {
            width: 100%;
            border-collapse: collapse;
            margin: 0;
        }

        .contacts-table thead {
            background-color: #f9fafb;
        }

        .contacts-table th {
            padding: 1rem;
            text-align: left;
            font-weight: 600;
            color: #374151;
            font-size: 0.875rem;
            border-bottom: 1px solid #e5e7eb;
        }

        .contacts-table td {
            padding: 1rem;
            border-bottom: 1px solid #f3f4f6;
            color: #6b7280;
            font-size: 0.875rem;
        }

        .contacts-table tbody tr:hover {
            background-color: #f9fafb;
        }

        .contacts-table tbody tr:last-child td {
            border-bottom: none;
        }

        .contact-id {
            font-weight: 600;
            color: #374151;
        }

        .contact-phone {
            font-family: monospace;
            color: #059669;
            font-weight: 500;
        }

        .contact-name {
            color: #374151;
            font-weight: 500;
        }

        .contact-email {
            color: #6b7280;
        }

        .badge {
            display: inline-block;
            padding: 0.25rem 0.5rem;
            font-size: 0.75rem;
            font-weight: 500;
            border-radius: 4px;
            margin-right: 0.25rem;
            margin-bottom: 0.25rem;
        }

        .badge-secondary {
            background-color: #e5e7eb;
            color: #374151;
        }

        .no-groups {
            color: #9ca3af;
            font-style: italic;
            font-size: 0.8rem;
        }

        .actions-cell {
            white-space: nowrap;
        }

        .actions-cell .btn {
            margin-right: 0.25rem;
        }

        .empty-state {
            text-align: center;
            padding: 3rem 2rem;
            color: #6b7280;
        }

        .empty-state-icon {
            font-size: 3rem;
            color: #d1d5db;
            margin-bottom: 1rem;
        }

        .empty-state-text {
            font-size: 1.1rem;
            margin-bottom: 0.5rem;
        }

        .empty-state-subtext {
            font-size: 0.875rem;
            color: #9ca3af;
        }

        .contacts-stats {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
            padding: 0 0.5rem;
        }

        .contacts-count {
            color: #6b7280;
            font-size: 0.875rem;
        }

        .table-header-actions {
            display: flex;
            gap: 0.5rem;
            align-items: center;
        }

        @media (max-width: 768px) {
            .contacts-table {
                font-size: 0.8rem;
            }

            .contacts-table th,
            .contacts-table td {
                padding: 0.75rem 0.5rem;
            }

            .page-header {
                flex-direction: column;
                gap: 1rem;
                align-items: stretch;
            }

            .filter-actions {
                flex-direction: row;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="contacts-container">
    <!-- En-tête de la page -->
    <div class="page-header">
        <h1 class="page-title">Mes Contacts</h1>
        <a href="{{ path('app_contact_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i>
            Ajouter un nouveau contact
        </a>
    </div>

    <!-- Section de filtrage -->
    <div class="filter-section">
        <form method="GET" action="{{ path('app_contact_index') }}" class="filter-form">
            <div class="form-group">
                <label for="search_q" class="form-label">Rechercher un contact</label>
                <input type="text"
                       class="form-control"
                       id="search_q"
                       name="q"
                       value="{{ searchQuery }}"
                       placeholder="Nom, numéro, email...">
            </div>

            <div class="form-group">
                <label for="search_group" class="form-label">Filtrer par groupe</label>
                {{ form_widget(filterForm.group, {
                    'attr': {
                        'class': 'form-select',
                        'id': 'search_group'
                    }
                }) }}
            </div>

            <div class="filter-actions">
                <button type="submit" class="btn btn-outline-secondary">
                    <i class="fas fa-search"></i>
                    Appliquer
                </button>
                <a href="{{ path('app_contact_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-times"></i>
                    Réinitialiser
                </a>
            </div>
        </form>
    </div>

    <!-- Statistiques et actions -->
    <div class="contacts-stats">
        <div class="contacts-count">
            {{ contacts|length }} contact(s) trouvé(s)
        </div>
        <div class="table-header-actions">
            <button class="btn btn-outline-secondary btn-sm" onclick="exportContacts()">
                <i class="fas fa-download"></i>
                Exporter
            </button>
        </div>
    </div>

    <!-- Tableau des contacts -->
    <div class="contacts-table-container">
        {% if contacts|length > 0 %}
            <table class="contacts-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Numéro de téléphone</th>
                        <th>Prénom</th>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Groupes</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for contact in contacts %}
                        <tr>
                            <td class="contact-id">#{{ contact.id }}</td>
                            <td class="contact-phone">{{ contact.phoneNumber }}</td>
                            <td class="contact-name">{{ contact.firstName }}</td>
                            <td class="contact-name">{{ contact.lastName }}</td>
                            <td class="contact-email">{{ contact.email ?: '—' }}</td>
                            <td>
                                {% for group in contact.contactGroups %}
                                    <span class="badge badge-secondary">{{ group.name }}</span>
                                {% else %}
                                    <span class="no-groups">Aucun groupe</span>
                                {% endfor %}
                            </td>
                            <td class="actions-cell">
                                <a href="{{ path('app_contact_show', {'id': contact.id}) }}"
                                   class="btn btn-info btn-sm"
                                   title="Voir le contact">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_contact_edit', {'id': contact.id}) }}"
                                   class="btn btn-warning btn-sm"
                                   title="Modifier le contact">
                                    <i class="fas fa-edit"></i>
                                </a>
                                {% include 'contact/_delete_form.html.twig' %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="fas fa-address-book"></i>
                </div>
                <div class="empty-state-text">Aucun contact trouvé</div>
                <div class="empty-state-subtext">
                    {% if searchQuery or filterForm.group.vars.data %}
                        Essayez de modifier vos critères de recherche ou
                        <a href="{{ path('app_contact_index') }}">réinitialisez les filtres</a>
                    {% else %}
                        Commencez par ajouter votre premier contact
                    {% endif %}
                </div>
            </div>
        {% endif %}
    </div>
</div>

<script>
function exportContacts() {
    // pour l'exportation de contacts pour fichier CSV 
    alert('Fonctionnalité d\'export à implémenter');
}


document.addEventListener('DOMContentLoaded', function() {
    const rows = document.querySelectorAll('.contacts-table tbody tr');
    rows.forEach(row => {
        row.addEventListener('mouseenter', function() {
            this.style.transform = 'translateX(2px)';
        });
        row.addEventListener('mouseleave', function() {
            this.style.transform = 'translateX(0)';
        });
    });
});
</script>
{% endblock %}
